div.header
    button(style="float: right;", ng-click="translate()") {{translated.translate}}
div.statistic-container
    div.actions
        div.match-score
            div.table
                div.cell {{matchScore.we}}
        div.match-score
            div.table
                div.cell -
        div.match-score
            div.table
                div.cell {{matchScore.them}}
        button.team-error(ng-click="teamError()") {{translated.errorTeam}}
        div.message
            div.table
                div.cell {{translated.players}}
        div(ng-repeat="player in team")
            button.number-card(ng-click="changePlayer(player.number)") {{player.number}}
